<div class="card">
  <% if count.release_id == 2 %>
    <%= link_to image_tag(count.image, class: :card__img ), root_path%>
    <div class="card__body">
      <%= link_to count.name, root_path, class: :card__title%>
      <%= link_to "by#{count.user.nickname}", root_path, class: :card__user %>
    </div>
  <% end %>
</div>